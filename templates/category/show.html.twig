{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Date_of_creation</th>
                <td>{{ category.dateOfCreation ? category.dateOfCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_of_last_modification</th>
                <td>{{ category.dateOfLastModification ? category.dateOfLastModification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Products</th>
                <table class="table table-bordered">
                    {% for product in category.products %}
                        <td> <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-outline-dark">{{ product.name}}</a>
                            <img src="{{ product.getMainImage() }}" width="100" height="100"></td>
                    {% endfor %}

                </table>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('category_index') }}" class="btn btn-outline-dark">back to list</a>
    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-dark">edit</a>
    {{ include('category/_delete_form.html.twig') }}
{% endblock %}